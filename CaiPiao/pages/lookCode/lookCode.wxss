.itemContent{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-flow:row nowrap; 
  background-color: #F5F5F5;
  box-shadow: 10rpx 10rpx 50rpx #F5F5F5;
}
.contentTitle{
  margin-left: 20rpx;
  color: #D2691E;
  font-size: 30rpx;
  line-height: 80rpx;
}
.contentNum{
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: #e44111;
  font-size: 35rpx;
  line-height: 80rpx;
}

.arrItem{
  width: 95%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.arrItem text{
  color: gray;
  font-size: 30rpx;
  flex-grow: 1;
}